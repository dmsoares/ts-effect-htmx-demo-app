doctype html
html(lang="en")
  head
    title Exams Manager
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl", crossorigin="anonymous")
  body
    nav.navbar.navbar-dark.bg-dark.shadow-sm.py-0
      .container
        a.navbar-brand(role="button" hx-get="/" hx-push-url="true") Exams Manager
        span.navbar-text.text-white  #{name}
    .container
      .row.justify-content-center
        main.col-10
          .container
            .row.justify-content-center
              .col-12
                h1.text-center.mt-5 Welcome to Exams Manager
                p.text-center.lead.mb-5 Manage your exams with ease
              .col-12
                .row.justify-content-center
                  .col-12
                    button.btn.btn-primary.btn-lg.btn-block(hx-get="/exam" hx-push-url="true" hx-trigger="click" hx-target="main" hx-swap="innerHTML") View Exams
          #timeline
    script(src="https://unpkg.com/htmx.org@1.9.12" integrity="sha384-ujb1lZYygJmzgSwoxRggbCHcjc0rB2XoQrxeTUQyRjrOnlCoYta87iKBWq3EsdM2" crossorigin="anonymous")
    script(src="https://unpkg.com/hyperscript.org@0.9.12")